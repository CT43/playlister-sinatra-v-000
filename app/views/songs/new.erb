<h1>Create a new Song</h1>

<form action="/songs" method="POST">
  <label>Name:</label>

  <br></br>

  <input type="text" name="song[name]" id="song_name">

  <br></br>

  <label>Choose an existing Artist:</label>

  <br></br>

  <%Artist.all.each do |artist|%>
    <input type="checkbox" name="song[artist_id]" id="<%=Artist.id%>" value="<%=pet.id%>"><%=pet.name%></input>
  <%end%>

  <br></br>

    <label>and/or, create a new pet:</label>
    <br></br>
    <label>name:</label>
      <input  type="text" name="pet[name]"></input>
    <br></br>
  <input type="submit" value="Create Owner">
</form>
